---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink class="link-item" href="/">home</HeaderLink>
			<HeaderLink class="link-item" href="/essays">essays</HeaderLink>
			<HeaderLink class="link-item" href="/thoughts">thoughts</HeaderLink>
			<HeaderLink class="link-item" href="/about">about</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--mantle);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0.5em 0.1em;
		font-size: 1.5em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		flex-direction: column;
		align-items: left;
		justify-content: space-between;
		padding: 0.5em 2em;
		padding-bottom: 0;
	}
	.link-item {
		color: var(--text);
		padding: 0.25em 0.1em;
		margin-right: 2.5em;
		padding-bottom: 0;
		border-bottom: 0.25em solid transparent;
		text-decoration: none;
		font-size: 0.7em;
	}
	.link-item.active {
		text-decoration: none;
		border-bottom-color: var(--text);
	}

	.internal-links {
		display: flex;
	}
</style>
