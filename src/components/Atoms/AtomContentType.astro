---
const { essay, note, musing, small } = Astro.props;
let contentType = "note";
if (essay) contentType = "essay";
if (musing) contentType = "musing";
---
<div class:list={[
	{ 
		"content-type": !small,
		"content-type-small": small,
		"essay": essay, 
    "note": note,
    "musing": musing,
    }]}>
  <p> { contentType } </p>
</div>

<style>
.content-type {
	position: absolute;
	display: flex;
	top: 0;
	left: 0;
	font-size: small;
	padding: 0.25rem;
	color: white;
	font-weight: 600;
	border-radius: 0 0 0.5rem 0rem;
	width: 3rem;
	height: 1rem;
	align-items: center;
	justify-content: center;	
	.p {
		margin: 0.25rem;
		margin-right: 1rem;
	}
}

.content-type-small {
	position: absolute;
	display: flex;
	top: 0;
	left: 0;
	font-size: x-small;
	padding: 0rem;
	color: white;
	font-weight: 600;
	border-radius: 0 0 0.5rem 0rem;
	width: 2.25rem;
	height: 1rem;
	align-items: center;
	justify-content: center;	
	.p {
		margin: 0.25rem;
		margin-right: 1rem;
	}
}

.essay {
	background: var(--rosewater);
}

.musing {
  background: var(--green);
}

.note {
  background: var(--teal);
}

</style>
