---
import BaseHead from '../components/BaseHead.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import OrganismEssayCard from '../components/Organisms/OrganismEssayCard.astro';
import OrganismContentType from '../components/Organisms/OrganismContentType.astro';
import OrganismListCard from '../components/Organisms/OrganismListCard.astro';
import OrganismAboutCard from '../components/Organisms/OrganismAboutCard.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
<body>
	<main class="main">
		<div class="header-container">
			<h1 class="serif">
				Clouded Hills
			</h1>	
			<h2 class="header">
				A place for essays, musings and notes on science, politics and life.
			</h2>
		</div>
		<div class="content-container">
			<OrganismEssayCard/>
			<OrganismListCard/>		
			<OrganismAboutCard/>
		</div>
		<p>
		</p> 
	</main>
</body>
<style>
.main {
	width: 100%;
	height: 100%;
	margin: 0;
	/* padding: 1rem 2rem;  */
}
.header-container {
	/* background-color: var(--mantle); */
	padding: 0rem 2rem;
	margin: 0;
}
.content-container {
	display: flex;
	height: 20rem;
	gap: 2rem;
	margin: 2rem 2rem;
}

.card-paragraph {
	color: white;
	line-height: 1.5rem;
	height: 100%;
	margin-top: 5rem;
}

.content-type {
	background: var(--rosewater);
	position: absolute;
	display: flex;
	top: 0;
	left: 0;
	font-size: small;
	padding: 0.25rem;
	color: white;
	font-weight: 600;
	border-radius: 0 0 0.5rem 0rem;
	width: 3rem;
	height: 1rem;
	align-items: center;
	justify-content: center;	
	.p {
		margin: 0.25rem;
		margin-right: 1rem;
	}
}


.h-container {
	padding: 4rem 2rem;
}

.content-card {
	height: 100%;
	flex: 1;
	overflow: hidden;
	position: relative;
	z-index: 1;
}

h3 {
	color: var(--base);
	font-size: x-large;
	font-weight: 600;
}

.background-image {
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
	border-radius: 0 0 0 0;

}

.card-rosewater {
	background: var(--rosewater);
}

.card-teal {
	background: var(--teal);
}

.card-yellow { 
	background: var(--yellow);
}

h1 {
	color: var(--teal);
	font-size: 5rem;
}

h2 {
	font-size: 2rem;
	font-weight: 200;
	width: 70%;
	color: var(--rosewater);
}
</style>